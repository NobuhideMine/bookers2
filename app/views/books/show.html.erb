<div class="container">
    <div class="row">
       
       
        
        <%= render 'book', user: @user, book: @book_new %>
        
        <div class ="col-md-8 offset-md-1">
            <h1>Book detail</h1>

            <table class="table">
                <tr>
                
                 <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to  @user.name, user_path(@user.id) %></td>
                 <td><%= link_to @book.title, book_path(@book.id) %></td>
                 <td><%= @book.body %></td>
                 <td>
                     <% if @book.user == current_user %>
                         <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
                     <% end %>
                 </td>   
                    <td>
                        <% if @book.user == current_user %>
                         <%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                        <% end %>
                    </td>
                </tr>
            </table>
            
        </div>
    </div>
</div>