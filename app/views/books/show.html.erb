
<div class="row">
        <div class="col-3">
            <h1>User info</h1>
        

            <p>name</p>
               
            <p>introduction</p>

            <button type="button" class="btn btn-outline-secondary"><i class="fa-solid fa-user-gear"></i></button>

            <h1>New book</h1>

            <%= form_with model: @Book do |f| %>
                <p>Title</p>
                <%= f.text_area :title %>
    
                <p>Opinion</p>
                <%= f.text_area :body %>
    
                <%= f.submit "Create Book" %>
            <% end %>
        </div>

<h1>Book detail</h1>

    <table>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    
        <%= @book.each do |book| %>
            <tr>
                <td></td>
                <td><%= link_to book.title, books_path(book.id) %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            </tr>
        <% end %>
    </table>
