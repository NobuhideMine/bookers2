<div class="container">
    <div class="row ">
        <div class="col-md-8 mx-auto">
            <h1>Editing Book</h1>
    
            <%= form_with model: @book do |f| %>
                <% if @book.errors.any? %>
                    <%= @book.errors.count %>errors prohibited book from being saved:
                        <ul>
                            <% @book.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                <% end %>    
                <div class="form-group">
                    <p>Title</p>
                    <%= f.text_field :title %>
                </div>
                <div class="form-group">
                    <p>Body</p>
                    <%= f.text_area :body %>
                </div>
                <div>
                    <%= f.submit 'Update Book' %>
                </div>
            <% end %>
 
            <table>
                <tr>
                    <td><%= link_to "Show", book_path(@book.id) %></td>
                    <td>|</td>
                    <td><%= link_to "Back", books_path %></td>
                </tr>
            </table>
        </div>
    </div>
</div>