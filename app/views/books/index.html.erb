<div class="container">
    
    <div class="row">
        <div class="col-3">
            <h1>User info</h1>
            
            <%= image_tag 
            <p>name</p>
               
            <p>introduction</p>

            <button type="button" class="btn btn-outline-secondary"><i class="fa-solid fa-user-gear"></i></button>

            <h1>New book</h1>

            <%= form_with model: @Book do |f| %>
                <p>Title</p>
                <%= f.text_area :title %>
    
                <p>Opinion</p>
                <%= f.text_area :body %>
    
                <%= f.submit "Create Book" %>
            <% end %>
        </div>

        <div class="col-8">
            <h2>Books</h2>

            <table>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
    
                <%= @books.each do |book| %>
                    <tr>
                    <td></td>
                    <td><%= link_to book.title, books_path(book.id) %></td>
                    <td><%= book.body %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </diV>

</div>