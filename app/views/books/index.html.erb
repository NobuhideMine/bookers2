<div class="container">
    
    <div class="row">
        <div class="col-3">
            <h1>User info</h1>
            <%= image_tag @user.get_profile_image(100,100) %> 
            <table>
                <%= @user.each do |user| %>
                    <tr>
                        <td>name</td>
                        <td><%= user.name %></td>
                    </tr>
                    <tr>
                        <td>introduction</td>
                        <td><%= user.introduction %></td>
                    </tr>
                <% end %>
            </table>
            
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary" do %>
            <i class="fa-solid fa-user-gear"></i>
            <% end %>
            
            <h1>New book</h1>

            <%= form_with model: @Book do |f| %>
                <p>Title</p>
                <%= f.text_field :title %>
    
                <p>Opinion</p>
                <%= f.text_area :body %>
    
                <%= f.submit "Create Book" %>
            <% end %>
        </div>

        <div class="col-8">
            <h2>Books</h2>

            <table>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
    
                <%= @books.each do |book| %>
                    <tr>
                    <td></td>
                    <td><%= link_to book.title, books_path(book.id) %></td>
                    <td><%= book.body %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </diV>

</div>