<div class="container">
    
    <div class="row">
        
        <%= render 'book', user: @user, book: @book %>
        
        <div class="col-8">
            <h2>Books</h2>
            <table class="table table-hover">
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
    
                <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= link_to user_path(@user.id) do %>
                                <%= image_tag @user.get_profile_image(100,100) %>
                            <% end %>
                        </td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </diV>

</div>