<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/771f6f27c6.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
     <nav class="navbar navbar-expand-lg mr-auto navbar-dark bg-dark">
        <div class="container"> 
          
            <%= link_to root_path do %>
              Bookers
            <% end %>
            <!--<a class="navbar-brand p-3" href="/">Bookers</a>-->
          <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                  <%= link_to user_path(current_user) do %>
                    <i class="fa-solid fa-home"></i>Home
                  <% end %>
              </li>
              
              <li class="nav-item">
                  <%= link_to users_path do %>
                    <i class="fa-solid fa-users"></i>Users
                  <% end %>
              </li>
              
              <li class="nav-item">
                  <%= link_to books_path do %>
                    <i class="fa-solid fa-book-open"></i>Books
                  <% end %>
              </li>
              
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa-solid fa-sign-out-alt"></i>Log out
                <% end %>
              </li>
            </ul>
          <% else %>
            
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to root_path do %>
                  <i class="fa-solid fa-home"></i>Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to about_path do %>
                  <i class="fa-solid fa-link"></i>About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to  new_user_registration_path do %>
                  <i class="fa-solid fa-user-plus"></i>Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to  new_user_session_path do %>
                  <i class="fa-solid fa-sign-in-alt"></i>Log in
                <% end %>
              </li>
              
            </ul>
          <% end %>
        </div>
      </nav>    
    </header>
    
    <%= yield %>
    
    <footer>
      <div class ="container">
        <div class="row ">
          <p class=" mt-5 mx-auto">CopyRight Infratop.ink</p>
        </div>
      </div>
    </footer>
  </body>
</html>
