
<div class="container">
    <div class="row">
        
        <%= render 'user', users: @users, book: @book %>
   
        <div class="col-8">
            <h1>Books</h1>
            
            <table class="table table-hover">
                <tr>
                    <td></td>
                    <td>Title</td>
                    <td>Opinion</td>
                </tr>
                <% @books.each do |book| %>
                    <tr>
                        <td><%= image_tag @users.get_profile_image(100,100) %></td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %> </td>
                    </tr>
                <% end %>
            </table>
            
            
            
             
        </div>
    
    </div>
</div>

