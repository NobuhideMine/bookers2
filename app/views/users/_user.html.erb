        <div class="col-md-3">
            
            <div><%= flash[:notice] %></div>
            
            <h1>User info</h1>
            <%= image_tag users.get_profile_image(100,100) %> 
            <table class ="table">
                
                    <tr>
                        <td>name</td>
                        <td><%= users.name %></td>
                    </tr>
                    <tr>
                        <td>introduction</td>
                        <td><%= users.introduction %></td>
                    </tr>
               
            </table>
            
            <%= link_to edit_user_path(users.id), class: "btn btn-block btn-outline-secondary" do %>
                <i class="fa-solid fa-user-gear"></i>
            <% end %>
            
            <h1>New book</h1>

            <%= form_with model: book do |f| %>
                <p>Title</p>
                <%= f.text_field :title %>
    
                <p>Opinion</p>
                <%= f.text_area :body %>
    
                <%= f.submit "Create Book" %>
            <% end %>
        </div>

