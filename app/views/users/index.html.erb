<h1>User info</h1>

<%= image_tag @users.get_profile_image(100,100) %>
<p>name</p>
               
<p>introduction</p>
    <%= link_to edit_user_path(@users.id), class: "btn btn-outline-secondary" do %>
            <i class="fa-solid fa-user-gear"></i>
    <% end %>       
<h1>New book</h1>

<%= form_with model: Book.new do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    
    <p>Opinion</p>
    <%= f.text_area :body %>
    
    <%= f.submit "Create Book" %>
<% end %>
