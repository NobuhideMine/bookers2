
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto px-5">
      
      <h2>Users info</h2>
      
      <div class="form-body">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      
      
        <%= form_with model: @user do |f| %>
      
        <diV class="form-group">
          <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </diV>
        <div class="form-group">  
          <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
            <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"紹介文"%>
        </div>   
        <div class="form-group">
            <%= f.submit "Update User" %>
        </div> 
      
        <% end %>
      </div>
    </div>
  </div>
</div>
